---
import type { CollectionEntry } from 'astro:content';

interface Props {
    data: CollectionEntry<"sections">;
}

const { data } = Astro.props;

const { Content } = await data.render();

---

<div class="grid grid-cols-2 max-w-[85rem] mx-auto pt-8 px-4">
    <h2 class="text-4xl md:text-5xl mr-48 font-semibold">{data.data.title}</h2>
    
    <div id="content">
        <Content />
    </div>
</div>

<style>
    #content :global(h1) {
        @apply text-2xl md:text-3xl;
    }

    #content :global(p) {
        @apply text-xl pb-2 border-b-4 border-blue-600 mb-5;
    }

    #content :global(p):last-of-type {
        @apply border-none;
    }
</style>